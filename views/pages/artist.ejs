<div class="container-fluid mt-5 px-5">
  <!-- Artist Name -->
  <div class="mb-4">
    <h1 class="fw-bold display-4"><%= artist.name %></h1>
  </div>
  <hr class="mb-3 border-top border-2 border-primary opacity-25" />

  <!-- Songs Section -->
  <div class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="fw-semibold mb-2" style="color: #1d4ed8">Songs</h3>
      <a
        href="/artist/<%= artist.id %>/songs"
        class="btn btn-outline-primary btn-sm"
        >See All</a
      >
    </div>

    <div class="list-group shadow-sm">
      <% artist.songs_5.songs.forEach((song, index) => { %>
      <a
        href="/song/<%= song.id %>"
        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center song-row"
      >
        <span class="fw-medium"><%= index + 1 %>. <%= song.title %></span>
      </a>
      <% }); %>
    </div>
  </div>
  <hr class="mt-5 mb-3 border-top border-2 border-primary opacity-25" />

  <!-- Albums Section -->
  <div>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="fw-semibold mb-2" style="color: #1d4ed8">Albums</h3>
      <a
        href="/artist/<%= artist.id %>/albums"
        class="btn btn-outline-primary btn-sm"
        >See All</a
      >
    </div>

    <div class="row g-4">
      <% artist.albums_5.albums.forEach((album) => { if (album) { %>
      <div class="col-6 col-md-3 col-lg-2">
        <a href="/album/<%= album.id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm border-0 album-card">
            <img
              src="<%= album.cover_url || '/images/cover-not-found.png' %>"
              class="card-img-top rounded"
              alt="<%= album.title %>"
            />
            <div class="card-body px-2 py-3 text-center">
              <h6 class="fw-semibold text-truncate"><%= album.title %></h6>
            </div>
          </div>
        </a>
      </div>
      <% } }); %>
    </div>
  </div>
</div>
