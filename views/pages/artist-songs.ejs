<div class="container-fluid mt-4 ps-5 pe-5">
  <h1 class="fs-1 fw-bold mb-4">Songs</h1>

  <div class="list-group shadow-sm">
    <% results.songs.forEach(function(song, index) { %>
      <a
        href="/song/<%= song.id %>"
        class="list-group-item list-group-item-action py-2 px-3 d-flex justify-content-between align-items-center"
      >
        <span class="fw-medium text-truncate" style="max-width: 100%">
          <%= index + 1 %>. <%= song.title %>
        </span>
      </a>
    <% }); %>
  </div>

  <% const totalPages = Math.ceil(results.total_count_songs / 12); %>
  <% if (totalPages > 1) { %>
    <nav class="d-flex justify-content-center mt-4">
      <ul class="pagination custom-pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === Number(page) ? 'active' : '' %>">
            <a
              class="page-link"
              href="?page=<%= i %>"
            >
              <%= i %>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>
